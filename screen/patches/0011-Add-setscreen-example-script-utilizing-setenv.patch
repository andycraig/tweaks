+#!/usr/bin/perl
+# 22 Mar 2019
+
+# Send all the environment variables from the calling process to a
+# screen session
+
+# Usage:
+# setscreen
+# setscreen -S session
+
+if(!grep {$_ eq "-S"} @ARGV) {
+  if(!$ENV{STY}) {
+    die "Need to specify -S STY if not in screen session";
+  }
+  push @ARGV, "-S", $ENV{STY};
+}
+
+delete $ENV{WINDOW};
+delete $ENV{TTY};
+delete $ENV{STY};
+#delete $ENV{TERM};
+
+system("screen",@ARGV,"-X","setenv",%ENV) == 0 or die "system failed: $?";
